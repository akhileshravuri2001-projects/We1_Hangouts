<style>
  /* Sidebar toggle button - hidden on desktop */
  .sidebar-toggle {
    background: transparent;
    border: none;
    color: white;
    font-size: 28px;
    cursor: pointer;
    display: none;
  }

  /* Sidebar styling */
  .sidebar {
    position: fixed;
    top: 0;
    left: -260px;
    width: 250px;
    height: 100%;
    background: #fff;
    box-shadow: 2px 0 8px rgba(0, 0, 0, 0.3);
    padding: 20px;
    transition: left 0.3s ease;
    z-index: 1001;
    overflow-y: auto;
  }

  .sidebar.active {
    left: 0;
  }

  .sidebar-links {
    list-style: none;
    padding: 0;
    margin-top: 40px;
  }

  .sidebar-links li {
    margin: 15px 0;
  }

  .sidebar-links a, .sidebar-links span {
    color: #333;
    font-size: 18px;
    text-decoration: none;
    display: block;
  }

  .close-sidebar {
    position: absolute;
    top: 10px;
    right: 15px;
    background: transparent;
    border: none;
    font-size: 28px;
    cursor: pointer;
    color: #333;
  }

  /* Show toggle on small screens only */
  @media (max-width: 768px) {
    .sidebar-toggle {
      display: none; // block
    }
  }

  /* Optional: hide main nav links on small screens (you can tweak this) */
  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
  }
</style>

<script>
  function toggleSidebar() {
    const sidebar = document.getElementById('sidebar');
    const isActive = sidebar.classList.toggle('active');
    sidebar.setAttribute('aria-hidden', !isActive);
  }
</script>
